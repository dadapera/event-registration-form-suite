{
  "name": "maeviaggi-registration-system",
  "version": "1.0.0",
  "description": "Event registration system with standalone services for Render hosting",
  "main": "index.js",
  "scripts": {
    "install:all": "cd crociera-fiordi && npm install && cd ../crociera-mediterraneo && npm install",
    "start:fiordi": "cd crociera-fiordi && npm start",
    "start:mediterraneo": "cd crociera-mediterraneo && npm start",
    "dev:fiordi": "cd crociera-fiordi && npm run dev",
    "dev:mediterraneo": "cd crociera-mediterraneo && npm run dev",
    "build:fiordi": "cd crociera-fiordi && docker build -t crociera-fiordi .",
    "build:mediterraneo": "cd crociera-mediterraneo && docker build -t crociera-mediterraneo .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "travel",
    "registration",
    "event",
    "booking",
    "standalone",
    "render",
    "docker",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": "Maeviaggi Travel Agency",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.19.2",
    "nodemailer": "^6.9.13",
    "pdfkit": "^0.15.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
